{% extends 'base.html.twig' %}

{% block title %}Livres par Auteur{% endblock %}

{% block body %}
<div class="container">
    <h1>Liste des livres triés par auteur</h1>
   
    <a href="{{ path('book_list') }}" class="btn btn-secondary mb-3">Retour à la liste</a>
   
    {% if books is empty %}
        <div class="alert alert-info">
            Aucun livre trouvé.
        </div>
    {% else %}
        <p>Total : <strong>{{ books|length }}</strong> livre(s)</p>
       
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Auteur</th>
                    <th>Titre</th>
                    <th>Référence</th>
                    <th>Publié</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% set currentAuthor = null %}
                {% for book in books %}
                    <tr>
                        <td>
                            {% if book.author %}
                                {% if currentAuthor != book.author.username %}
                                    <strong>{{ book.author.username }}</strong>
                                    {% set currentAuthor = book.author.username %}
                                {% endif %}
                            {% else %}
                                <em>Aucun auteur</em>
                            {% endif %}
                        </td>
                        <td>{{ book.title }}</td>
                        <td>{{ book.ref }}</td>
                        <td>
                            {% if book.published %}
                                <span class="badge bg-success">Oui</span>
                            {% else %}
                                <span class="badge bg-warning">Non</span>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('book_show', {'id': book.id}) }}" class="btn btn-info btn-sm">Voir</a>
                            <a href="{{ path('book_edit', {'id': book.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
{% endblock %}